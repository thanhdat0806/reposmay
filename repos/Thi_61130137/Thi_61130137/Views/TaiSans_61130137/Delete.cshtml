@model Thi_61130137.Models.TaiSan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string XX = "";
}

<h2>Xóa thông tin tài sản</h2>

<h3>Bạn chắc chắn muốn xóa tài sản này?</h3>
<table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="8"><img src="~/Images/@Html.DisplayFor(model => model.AnhMH)" width="100" height="100" /></td>
                    <td>Mã tài sản:</td>
                    <td>@Html.DisplayFor(model => model.MaTS)</td>
                </tr>
                <tr>
                    <td>Tên tài sản:</td>
                    <td>@Html.DisplayFor(model => model.TenTS)</td>
                </tr>
                <tr>
                    <td>Đơn vị tính:</td>
                    <td>@Html.DisplayFor(model => model.DVT)</td>
                </tr>
                <tr>
                    <td>XuatXu:</td>
                    <td>
                        @{if (Model.XuatXu == true)
                            { XX = "Trong Nước"; }
                            else
                            { XX = "Ngoại nhập"; }
                        }
                        @XX
                    </td>
                </tr>
                <tr>
                    <td>Đơn giá:</td>
                    <td>@Html.DisplayFor(model => model.Dongia)</td>
                </tr>
                <tr>
                    <td>Ghi chú:</td>
                    <td>@Html.DisplayFor(model => model.Ghichu)</td>
                </tr>
                <tr>
                    <td>Lớp:</td>
                    <td>@Html.DisplayFor(model => model.LoaiTaiSan.TenLTS)</td>
                </tr>

            </table>
        </td>
    </tr>
</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:50px;">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        @Html.ActionLink("Quay lại", "Index")
    </div>
}
