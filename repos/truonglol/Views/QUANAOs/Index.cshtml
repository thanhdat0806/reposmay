@model IEnumerable<truonglol.Models.QUANAO>

@{ 
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 2);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}

<h2>Index</h2>

<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>

    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
         tableStyle: "table table-bordered table-hover",
         footerStyle: "grid-footer",
         fillEmptyRows: true,
         mode: WebGridPagerModes.Numeric,
         alternatingRowStyle: "alternatingRowStyle",
           columns: new[]  // colums in grid
          {

        grid.Column("MaQA","Mã Quần Áo"), //the model fields to display
        grid.Column("TenQA","Tên Quần Áo"  ),
        grid.Column("MoTa","Mô Tả"),
        grid.Column("XuatXu","Xuất Xứ",format: (@item) => @item.XuatXu==true?"Trong Nước":"Ngoại Nhập"),
        grid.Column("DonGia","Đơn Giá"),
grid.Column("Anh","Ảnh Minh Họa"),
grid.Column("LOAIQUANAO.TenLQA","Loại quần áo"),
grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","QUANAOs", new { id = item.MaQA },"QUANAOController"))
           })
    </div>
</body>
</html>

