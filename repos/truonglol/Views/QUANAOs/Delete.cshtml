@model truonglol.Models.QUANAO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string XuatXu =" ";
}

<h2>Delete</h2>

<h3>Bạn Có Chắc Xóa Thông Tin Này Kho</h3>

<table border="0" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <tr>
                    <td rowspan="8"><img src="/Images/@Html.DisplayFor(model => model.Anh)" width="100" height="100" /></td>
                    <td>Mã Quần Áo:</td>
                    <td>@Html.DisplayFor(model => model.MAQA)</td>
                </tr>
                <tr>
                    <td>Tên Quần Áo:</td>
                    <td>@Html.DisplayFor(model => model.TenQA)</td> 
                </tr>
                <tr>
                    <td>Mô Tả</td>
                    <td>@Html.DisplayFor(model => model.MOTA)</td>
                </tr>
                <tr>
                    <td>Xuất Xứ:</td>
                    <td>
                        @{if (Model.XuatXu == true)
                            { XuatXu = "Trong Nước"; }
                            else
                            { XuatXu = "Ngoại Nhập"; }
                        }
                        @XuatXu
                    </td>
                </tr>
                <tr>
                    <td>Đơn Giá:</td>
                    <td>@Html.DisplayFor(model => model.DonGia)</td>
                </tr>
                <tr>
                    <td>Loại Quần Áo:</td>
                    <td>@Html.DisplayFor(model => model.LOAIQUANAO.TenLQA)</td>
                </tr>


            </table>
        </td>
    </tr>
</table>
<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoa" class="btn btn-default" /> |

        </div>
    }
</div>