@model IEnumerable<KT100720_59131885.Models.TaiSan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 2);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}

<h2>Thông Tin Tài Sản</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>

    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
         tableStyle: "table table-bordered table-hover",
         footerStyle: "grid-footer",
         fillEmptyRows: true,
         mode: WebGridPagerModes.Numeric,
         alternatingRowStyle: "alternatingRowStyle",
           columns: new[]  // colums in grid
          {

        grid.Column("MaTS","Mã Tài Sản"), //the model fields to display
        grid.Column("TenTS","Tên Tài Sản"  ),
        grid.Column("DVT","DƠN VỊ TÍNH"),
        grid.Column("XuatXu","xuất xứ"),
        grid.Column("DonGia","Đơn Giá"),
grid.Column("AnhMH","Ảnh Minh Họa"),
grid.Column("LOAITAISAN.TenLTS","Loại TÀI SẢN"),
grid.Column("GhiChu","ghi chú"),
grid.Column(format: (item) => Html.ActionLink("Cập nhật", "Edit", "TaiSan_59131885",new { id = item.MaTS },"TaiSan_59131885Controller")),
grid.Column(format: (item) => Html.ActionLink("Xem chi tiết", "Details","TaiSan_59131885", new { id = item.MaTS },"TaiSan_59131885Controller")),
grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","TaiSan_59131885", new { id = item.MaTS },"TaiSan_59131885Controller"))
           })
    </div>
</body>
</html>
